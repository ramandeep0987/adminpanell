<style>
  /* Dashboard card styling */
.card {
  border-radius: 14px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  background: #ffffff;
}

/* Hover effect */
.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
  border-color: #2563eb;
}

/* Card header layout */
.card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: transparent;
  border-bottom: none;
  padding: 18px 20px;
}

/* Number text */
.card .fw-bolder {
  font-size: 26px;
  color: #111827;
}

/* Subtitle text */
.card .card-text {
  font-size: 14px;
  color: #6b7280;
  margin-top: 4px;
}

/* Avatar circle */
.card .avatar {
  height: 48px;
  width: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Icon inside avatar */
.card .avatar i {
  font-size: 22px;
  color: #2563eb;
}

/* Change avatar background on hover */
.card:hover .avatar {
  background-color: #2563eb !important;
}

.card:hover .avatar i {
  color: #ffffff;
}

</style>