<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
function mark(value){
  document.getElementById("parking").style.display= value === 'Unsatisfied' ? "block" : "none";

}

document.getElementById("profile").addEventListener("submit", function(e){
    e.preventDefault(); // stop normal submit

    let formData = new FormData(this);

    fetch("/Create_category", {
        method: "POST",
        body: formData
    })
    .then(res => res.text())
    .then(data => {
        Swal.fire({
            title: "Success!",
            text: "Your response has been submitted.",
            icon: "success",
            confirmButtonText: "OK"
        });

        // you can also reset the form
        document.getElementById("profile").reset();
    })
    .catch(err => {
        Swal.fire("Error!", "Something went wrong.", "error");
    });
});
</script>
