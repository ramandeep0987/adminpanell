        method: "POST",
        body: formData
    })
    .then(res => res.text())
    .then(data => {
        Swal.fire({
            title: "Success!",
            text: "Your response has been submitted.",
            icon: "success",
            confirmButtonText: "OK"
        }).then(() => {
        // Reload page after popup is closed
        window.location.reload();
    });

        // you can also reset the form
        document.getElementById("profile").reset();
    })
    .catch(err => {
        Swal.fire("Error!", "Something went wrong.", "error");
    });
});   
</script>
